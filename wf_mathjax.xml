<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="system" method="upgrade">
	<name>plg_system_wf_mathjax</name>
	<version>@@version@@</version>
	<creationDate>@@date@@</creationDate>
	<author>Ryan Demmer</author>
	<authorEmail>@@email@@</authorEmail>
	<authorUrl>https://www.widgetfactorylimited.co.uk</authorUrl>
	<copyright>@@copyright@@</copyright>
	<license>@@licence@@</license>
	<description>PLG_SYSTEM_WF_MATHJAX_XML_DESCRIPTION</description>
	<files folder="plugins/system/wf_mathjax">
		<file plugin="wf_mathjax">wf_mathjax.php</file>
	</files>
	<languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.plg_system_wf_mathjax.ini</language>
		<language tag="en-GB">en-GB.plg_system_wf_mathjax.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="mathjax_options" type="text" label="PLG_WF_MATHJAX_OPTIONS_LABEL" description="PLG_WF_MATHJAX_OPTIONS_DESCRIPTION" default="TeX,MML,AM_CHTML" />
				<field name="mathjax_delimeter" type="text" label="PLG_WF_MATHJAX_DELIMETER_LABEL" description="PLG_WF_MATHJAX_DELIMETER_DESCRIPTION" default="$ $" />
			</fieldset>
		</fields>
	</config>
</extension>
